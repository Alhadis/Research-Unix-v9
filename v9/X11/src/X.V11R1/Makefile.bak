# before doing the depend, be sure that makedepend exists.
#
depend:: $(DEPEND)

$(DEPEND):
	@echo "making $(DEPENDSRC)"; \
	cd $(DEPENDSRC); $(MAKE)

depend::
	for i in $(SUBDIRS) ;\
	do \
		(cd $$i ; echo "depending $$i"; \
			$(MAKE) $(MFLAGS) depend ); \
	done

