all::
	for i in $(DIRSTOMAKE) $(RGBSRC) $(XMANSRC) ;\
	do \
		(cd $$i ; echo "making $$i"; \
			$(MAKE)  $(MFLAGS)); \
	done

hacks::
	for i in $(HACKSRC) ;\
	do \
		(cd $$i ; echo "making $$i"; \
			$(MAKE)  $(MFLAGS)); \
	done

lintlib::
	for i in $(LINTLIBDIRS) ;\
	do \
